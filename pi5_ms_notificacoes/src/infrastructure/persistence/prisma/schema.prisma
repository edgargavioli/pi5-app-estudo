generator client {
    provider      = "prisma-client-js"
    output        = "./client"
    binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE")
}

model Notification {
    id           String   @id @default(cuid())
    userId       String
    type         String // EVENT_REMINDER, EVENT_TODAY, STREAK_WARNING, etc
    entityId     String? // ID do evento ou streak
    entityType   String // 'event' ou 'streak'
    entityData   Json // Dados din√¢micos do evento/streak
    scheduledFor DateTime // Quando deve ser enviada
    status       String   @default("PENDING") // PENDING, SENT, FAILED
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    user User @relation(fields: [userId], references: [id])

    @@index([scheduledFor, status])
}

model User {
    id        String   @id
    fcmToken  String   @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    Notifications Notification[]
}
